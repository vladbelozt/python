задание 1
# Целое число
integer_var = 10

# Число с плавающей запятой
float_var = 3.14

# Строка
string_var = "Hello, world!"

# Список чисел
list_var = [1, 2, 3, 4, 5]

# Кортеж с разными типами данных
tuple_var = (True, 42, "Python", 4.2)

# Словарь с ключами и значениями
dict_var = {
    "name": "Alice",
    "age": 30,
    "city": "Wonderland"
}

# Множество уникальных чисел
set_var = {1, 2, 3, 4, 5, 5}

# Логическое значение
bool_var = True

# Вывод значений на экран
print("integer_var:", integer_var)
print("float_var:", float_var)
print("string_var:", string_var)
print("list_var:", list_var)
print("tuple_var:", tuple_var)
print("dict_var:", dict_var)
print("set_var:", set_var)
print("bool_var:", bool_var)
задание 2
# Информация о себе
name = "Имя"  # Замените на ваше имя
age = 25  # Замените на ваш возраст
average_grade = 4.5  # Замените на ваш средний балл
favorite_movies = ["Фильм 1", "Фильм 2", "Фильм 3"]  # Замените на ваши любимые фильмы
personal_info = ("Фамилия", "Номер школы", average_grade)  # Замените на вашу фамилию и номер школы
skills = {
    "Программирование": "Выше среднего",
    "Английский": "Средний",
    "Работа в команде": "Хороший"
}  # Замените на ваши навыки
visited_countries = {"Россия", "США", "Франция"}  # Замените на страны, которые вы посетили
has_driver_license = True  # Укажите, есть ли у вас водительские права

# Вывод информации на экран
print("Имя:", name)
print("Возраст:", age)
print("Средний балл:", average_grade)
print("Любимые фильмы:", favorite_movies)
print("Личная информация:", personal_info)
print("Навыки:", skills)
print("Посетившие страны:", visited_countries)
print("Есть водительские права?", has_driver_license)
задание 3
# Характеристики компьютера
processor_name = "Intel Core i7"  # Название процессора
ram_size = 16  # Объем оперативной памяти в ГБ
internet_speed = 100.5  # Скорость интернета в Мбит/с

# Массив, содержащий все переменные
computer_specs = [processor_name, ram_size, internet_speed]

# Вывод спецификаций компьютера на экран
print("Характеристики компьютера:", computer_specs)
